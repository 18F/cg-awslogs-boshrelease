#!/bin/sh

set -eux

mkdir -p /var/vcap/sys/log/awslogs-trusty
[ -f /var/vcap/jobs/awslogs-trusty/config/proxy.conf ] && . /var/vcap/jobs/awslogs-trusty/config/proxy.conf

<% if_p('awslogs-trusty.access_key') do |key| %>export AWS_ACCESS_KEY_ID=<%= key %><% end %>
<% if_p('awslogs-trusty.secret_access_key') do |key| %>export AWS_SECRET_ACCESS_KEY=<%= key %><% end %>
export AWS_DEFAULT_REGION=<%= p('awslogs-trusty.region') %>
export LD_LIBRARY_PATH=/var/vcap/packages/awslogs-trusty/lib
export HTTPS_PROXY=$HTTPS_PROXY
export HTTP_PROXY=$HTTP_PROXY
export NO_PROXY=$NO_PROXY
export AWS_CONFIG_FILE=/var/vcap/jobs/awslogs-trusty/config/awscli.conf
export HOME=/root

AWSCLI=/var/vcap/packages/awslogs-trusty/bin/aws

# make a sample request to test our credentials;  this will fail (and monit will notice) if the creds are bad
# the name "canary" was chosen at random, it doesn't matter what it is, querying an unknown metric will still succeed

${AWSCLI} cloudwatch list-metrics --metric-name canary

# if we got to here then we are good to start the agent

exec /usr/bin/nice -n 4 ${AWSCLI} logs push \
--config-file /var/vcap/jobs/awslogs-trusty/config/awslogs.conf \
--additional-configs-dir /var/vcap/jobs/awslogs-trusty/conf.d >> /var/vcap/sys/log/awslogs-trusty/awslogsd.log 2>&1
